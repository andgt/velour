{% extends 'includes/base.twig' %}

{% block title %}Список страниц{% endblock %}

{% block page %}
    {%
        set pagesList = [
            {link: 'main', title: 'Главная'},
            {link: 'decoration', title: 'Украшения'},
            {link: 'about', title: 'О нас'},
            {link: 'delivery', title: 'Доставка и оплата'},
            {link: 'reviews', title: 'Отзывы'},
            {link: 'discounts', title: 'Акции и скидки'},
            {link: 'partnership', title: 'Партнерам'},
            {link: 'contacts', title: 'Контакты'},
        ]
    %}
    <div class="page-container">
        <h1 class="page-title">Список страниц сайта</h1>
        <ul class="list-pages">
            {% for item in pagesList %}
                <li>
                    <a class="list-pages__link" href="{{item.link}}.html">{{item.title}}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
