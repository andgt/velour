{% include 'templates/_breadcrumbs.twig' %}
<article class="card">
    <header class="card__header container">
        <span class="card__article">{% block article %} Default article {% endblock%}</span>
        <button class="btn" type="button">
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15.6301 3.45753C15.247 3.07428 14.7922 2.77026 14.2916 2.56284C13.791 2.35542 13.2545 2.24866 12.7126 2.24866C12.1707 2.24866 11.6342 2.35542 11.1336 2.56284C10.633 2.77026 10.1782 3.07428 9.79509 3.45753L9.00009 4.25253L8.20509 3.45753C7.43132 2.68376 6.38186 2.24906 5.28759 2.24906C4.19331 2.24906 3.14386 2.68376 2.37009 3.45753C1.59632 4.23129 1.16162 5.28075 1.16162 6.37502C1.16162 7.4693 1.59632 8.51875 2.37009 9.29252L3.16509 10.0875L9.00009 15.9225L14.8351 10.0875L15.6301 9.29252C16.0133 8.90946 16.3174 8.45463 16.5248 7.95404C16.7322 7.45345 16.839 6.91689 16.839 6.37502C16.839 5.83316 16.7322 5.2966 16.5248 4.79601C16.3174 4.29541 16.0133 3.84059 15.6301 3.45753Z" fill="#cccfde"/>
            </svg>
        </button>
    </header>
    <div class="card__slider">
        <div class="swiper-wrapper">
            {% for item in sliderCard %}
                <div class="swiper-slide">
                    <picture>
                        <source media="(min-width:768px)" srcset="{% block tabletimg %}../img/template/template-{{ item.slide }}.jpg, ../img/template/no-image.jpeg{% endblock %}">
                        <img class="card__img slider__img" src="{% block image %}../img/template/template-{{ item.slide }}.jpg{% endblock%}" srcset="{% block image2x %}../img/template/template-{{ item.slide }}.jpg{% endblock %}" width="280" height="280" alt="Фото новинки.">
                    </picture>
                </div>
            {% endfor %}
        </div>
        <div class="swiper-pagination slider__pagination"></div>
    </div>
    <div class="card__main">
        <div class="card__price container">
            <span class="card__current-price">{% block price %} Default price {% endblock %} &#8381;</span>
            <span class="card__oldprice">
                <del>{% block oldprice %} Default old price {% endblock %} &#8381;</del>
            </span>
        </div>
        <div class="card__order container">
            <a class="card__button" href="https://vk.com/im?entrypoint=community_page&media=&sel=-221021022" target="_blank">написать vk</a>
            <a class="card__button card__button--second" href="https://vk.com/im?entrypoint=community_page&media=&sel=-221021022" target="_blank">написать whatsapp</a>
        </div>
        <div class="container">
            <dl class="card__detail">
                {% for item in cardDetail %}
                    <div class="card__detail-inner">
                        <dt class="card__term">{{ item.title }}:</dt>
                        <dd class="card__desc">{{ item.description }}</dd>
                    </div>
                {% endfor %}
            </dl>
        </div>
    </div>
    <footer class="card__description container">
        <h3 class="card__subtitle">Описание</h3>
        <div class="card__text">{% block description%} Default text {% endblock %}</div>
    </footer>
</article>
